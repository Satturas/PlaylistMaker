<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/track_cover"
        android:src="@drawable/vector_cover_placeholder"/>

    <LinearLayout
        android:id="@+id/rootInsideLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/search_margin_4"
        android:layout_marginTop="@dimen/side_padding_16"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/side_padding_16"
        android:paddingVertical="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/settings_text_size"
            android:textFontWeight="400"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Yesterday (Remastered 2009)" />

        <LinearLayout
            android:id="@+id/rootInsideLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="11sp"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="200dp"
                tools:text="The Beatles" />

            <ImageView
                android:id="@+id/ivPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/separator_band_length"
                android:src="@drawable/vector_point_separator" />

            <TextView
                android:id="@+id/tvLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="11sp"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                tools:text="2:55" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivForwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/search_margin_4"
        android:contentDescription="@string/forward_arrow"
        android:src="@drawable/forward_arrow_vector"/>

</LinearLayout>