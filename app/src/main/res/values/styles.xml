<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainScreenStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_menu_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/main_menu_buttons_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_menu_buttons_icon_padding</item>
        <item name="iconTint">@color/icon</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonSettingsScreenStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingStart">0sp</item>
        <item name="android:paddingEnd">0sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="ToolbarTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="placeHoldersTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tabLayoutTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">4</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="placeholderButtonsStyle">
        <item name="android:backgroundTint">?attr/colorOnTertiary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="createPlaylistButtonsStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnTertiaryContainer</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="colorOnSurface">@color/menu_day</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/menu_chosen</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/menu_chosen</item>
    </style>

    <style name="NeutralButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/menu_chosen</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/button_enabled</item>
    </style>


</resources>